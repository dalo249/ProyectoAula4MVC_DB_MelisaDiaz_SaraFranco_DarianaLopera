@model IEnumerable<ProyectoAula4MVC.Models.DB.Departamentos>

@{
    ViewBag.Title = "Lista departamentos";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Crear departamento", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_Departamento }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Departamento }, new { @class = "btn btn-primary" })
        </td>

    </tr>
}

</table>
